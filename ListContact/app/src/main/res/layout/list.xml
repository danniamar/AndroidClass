<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="15dp"
    android:clickable="true"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:foreground="?android:attr/selectableItemBackground">

    <ImageView
        android:layout_width="72dp"
        android:layout_height="55dp"
        app:srcCompat="@mipmap/ic_launcher"
        android:id="@+id/imgIcono" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txt_Nombre"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/imgIcono"
        android:layout_toEndOf="@+id/imgIcono"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="5dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Title" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txt_Cargo"
        android:layout_alignBottom="@+id/imgIcono"
        android:layout_alignLeft="@+id/txt_Nombre"
        android:layout_alignStart="@+id/txt_Nombre" />
</RelativeLayout>